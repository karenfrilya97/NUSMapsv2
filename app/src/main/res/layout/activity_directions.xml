<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bryan.nusmapsv2.DirectionsActivity">

    <Button
        android:id="@+id/button2"
        android:layout_width="165dp"
        android:layout_height="65dp"
        android:text="DISTANCE / TIME"
        android:layout_marginStart="11dp"
        android:layout_below="@+id/rectangle"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button5"
        android:layout_width="165dp"
        android:layout_height="65dp"
        android:text="DIRECTIONS (WALK)"
        android:layout_below="@+id/button4"
        android:layout_alignStart="@+id/button4" />

    <Button
        android:id="@+id/button4"
        android:layout_width="165dp"
        android:layout_height="65dp"
        android:text="DIRECTIONS (BUS)"
        android:layout_alignTop="@+id/button2"
        android:layout_alignStart="@+id/imageView4" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="231dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_rectangle"
        android:contentDescription="@string/app_name"
        android:id="@+id/rectangle"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
        
    <EditText
        android:background="@drawable/bg_start_point"
        android:layout_width="298dp"
        android:layout_height="40dp"
        android:hint="@string/hint1"
        android:textColorHint="#FFFFFF"
        android:paddingLeft="40dp"
        android:layout_marginTop="61dp"
        android:id="@+id/editText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="298dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_destination"
        android:layout_below="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:layout_marginTop="13dp"
        android:hint="@string/hint2"
        android:paddingLeft="40dp"
        android:textColorHint="#FFFFFF"
        android:id="@+id/editText3" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_trending_up_white_24dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/editText3"
        android:layout_alignParentStart="true"
        android:layout_marginStart="29dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        app:srcCompat="@drawable/ic_directions_car_white_24dp"
        android:layout_alignTop="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_directions_bus_white_24dp"
        android:layout_marginEnd="50dp"
        android:layout_alignTop="@+id/imageView3"
        android:layout_toStartOf="@+id/imageView5" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_directions_walk_white_24dp"
        android:layout_alignTop="@+id/imageView4"
        android:layout_alignEnd="@+id/editText3"
        android:layout_marginEnd="12dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="165dp"
        android:layout_height="65dp"
        android:text="DIRECTIONS (CAR)"
        android:layout_below="@+id/button2"
        android:layout_alignStart="@+id/button2" />

</RelativeLayout>
